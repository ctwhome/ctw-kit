{
  "name": "ctw-kit",
  "version": "1.0.25",
  "description": "Custom components and utilities for Svelte and TailwindCSS (DaisyUI)",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-package",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "bun run test:unit -- --run",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "daisyui": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.0.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.11",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15"
  },
  "keywords": [
    "svelte",
    "components",
    "tailwindcss",
    "daisyui",
    "seo"
  ],
  "author": "CTW",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ctwhome/ctw-kit.git"
  },
  "bugs": {
    "url": "https://github.com/ctwhome/ctw-kit/issues"
  },
  "homepage": "https://github.com/ctwhome/ctw-kit#readme",
  "publishConfig": {
    "access": "public"
  }
}
